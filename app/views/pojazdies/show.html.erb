<% title "Pojazd" %>

<% if notice -%>
<div id="notice"><%= notice %></div>
<% end -%>

<article class="single">
  <div class="attribute">
    <span class="name">Nr rejestracyjnyn</span>
    <span class="value"><%= @pojazdy.nr_rejestracyjnyn %></span>
  </div>
  <div class="attribute">
    <span class="name">Marka</span>
    <span class="value"><%= @pojazdy.marka %></span>
  </div>
  <div class="attribute">
    <span class="name">Dysponent</span>
    <span class="value"><%= @pojazdy.dysponent %></span>
  </div>
  <div class="attribute">
    <span class="name">Stan licznika</span>
    <span class="value"><%= @pojazdy.stan_licznika %></span>
  </div>
  <div class="attribute">
    <span class="name">Lokalizacja</span>
    <span class="value"><%= @pojazdy.lokalizacja %></span>
  </div>
  <div class="link">
    <%= link_to 'Back', pojazdies_path %>
  </div>
</article>
